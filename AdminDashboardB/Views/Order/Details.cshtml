@model DTOsB.OrderDTO.SelectOrderBDTO
@{
    ViewData["Title"] = "Details";
}


<div class="container my-5 p-4  shadow rounded col-md-8">
    <div class="row justify-content-center mt-5">
        <h2 class="text-center mb-4 bg-light fw-bold text-primary p-4 shadow rounded" style="margin-top: -100px">Order Details</h2>
        <form method="post">
            <div class="container">
                <div>
                    @* <input hidden asp-for="Order.Id" /> *@
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-6 pb-4">

                                <div class="row my-1">
                                    <div class="col-3">Order Date</div>
                                    <div class="col-9">

                                         <input asp-for="@Model.OrderDate" type="date" class="form-control" /> 
                                        @* <span asp-validation-for="Order.Name" class="text-danger"></span> *@

                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Total Price</div>
                                    <div class="col-9">
                                        <input asp-for="@Model.TotalPrice" type="text" class="form-control" />
                                        @* <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span> *@
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Current Status</div>
                                    <div class="col-9">

                                        <input asp-for="@Model.CurrentStatus" type="text" class="form-control" />
                                        @* <span asp-validation-for="Order.Address" class="text-danger"></span> *@
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Shipping Cost</div>
                                    <div class="col-9">
                                        <input type="text" asp-for="@Model.ShippingCost" class="form-control" />
                                        @* <span asp-validation-for="Order.City" class="text-danger"></span> *@
                                    </div>
                                </div>

                                <div class="row my-1">
                                    <div class="col-3">Customer Name</div>
                                    <div class="col-9">
                                        <input asp-for="@Model.ApplicationUserName" readonly type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Paying Status</div>
                                    <div class="col-9">

                                         <input value="@Model.PaymentStatus" readonly type="text" class="form-control" /> 

                                    </div>
                                </div>

                                <input type="submit" asp-action="UpdateOrderDetails" class="btn btn-success form-control my-1 shadow" value="Update Details" />


                            </div>
                            @*  <div class="col-12 col-lg-5 offset-lg-1 shadow rounded h-25 ">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span></span>
                                </h4>
                                <label class="btn btn-outline-primary form-control my-2">Order Status - Order.OrderStatus</label>

                                <ul class="list-group mb-3">
                                     @foreach (var item in Model.OrderItems){
                                     
                                        <li class="list-group-item d-flex justify-content-between p-2">
                                            <div class="row container">
                                                <div class="col-8">

                                                    <h6 class="my-0 text-primary">Product.Name</h6>
                                                    <small class="text-muted">Product Name : @item.ProductName</small><br />
                                                    <small class="text-muted">Quantity : @item.Quantity</small>
                                                </div>
                                            </div>
                                        </li>
                                     } 
                                 </ul>

                            </div>  *@
                        </div>
                    </div>
                </div>
            </div>
        </form>

         <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price for One Item</th>
                     <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Quantity in Stock</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.OrderItems)
                {
                    <tr>
                        <td>@product.ProductName</td>
                         <td>@product.Price.ToString("C")</td> <!-- Format as currency -->
                         <td>@product.Quantity</td>
                         <td>@product.TotalPrice</td>
                         <td>@product.StockQuantity</td>
                       
                    </tr>
                }
            </tbody>
        </table> 
    </div>
</div>